<view class="container">
  <!-- 用户信息 -->
  <view class="user-card">
    <view class="user-avatar">👤</view>
    <view class="user-info">
      <view class="user-phone">{{phoneMasked || '未登录'}}</view>
      <view class="user-status">{{isPhoneAuthorized ? '已授权手机号' : '未授权'}}</view>
    </view>
  </view>

  <!-- 基本信息 -->
  <view class="section">
    <view class="section-title">基本信息</view>

    <view class="form-item">
      <text class="form-label">生日</text>
      <picker
        mode="date"
        value="{{birthday}}"
        start="1900-01-01"
        end="2026-12-31"
        bindchange="onBirthdayChange">
        <view class="form-value {{!birthday ? 'placeholder' : ''}}">
          {{birthday || '请选择生日'}}
        </view>
      </picker>
    </view>

    <view class="form-item">
      <text class="form-label">性别</text>
      <radio-group bindchange="onGenderChange">
        <label class="radio-label">
          <radio value="unspecified" checked="{{gender === 'unspecified'}}" />
          <text>保密</text>
        </label>
        <label class="radio-label">
          <radio value="male" checked="{{gender === 'male'}}" />
          <text>男</text>
        </label>
        <label class="radio-label">
          <radio value="female" checked="{{gender === 'female'}}" />
          <text>女</text>
        </label>
      </radio-group>
    </view>
  </view>

  <!-- 使用统计 -->
  <view class="section">
    <view class="section-title">使用统计</view>

    <view class="stats-grid">
      <view class="stat-item">
        <view class="stat-value">{{historyCount}}</view>
        <view class="stat-label">推算次数</view>
      </view>
      <view class="stat-item">
        <view class="stat-value">10</view>
        <view class="stat-label">卡片类型</view>
      </view>
    </view>
  </view>

  <!-- 功能列表 -->
  <view class="section">
    <view class="section-title">功能</view>

    <view class="menu-list">
      <view class="menu-item">
        <text class="menu-icon">📜</text>
        <text class="menu-text">历史记录</text>
        <text class="menu-arrow">›</text>
      </view>

      <view class="menu-item">
        <text class="menu-icon">⭐</text>
        <text class="menu-text">我的收藏</text>
        <text class="menu-arrow">›</text>
      </view>

      <view class="menu-item">
        <text class="menu-icon">📝</text>
        <text class="menu-text">日记本</text>
        <text class="menu-arrow">›</text>
      </view>

      <view class="menu-item">
        <text class="menu-icon">⚙️</text>
        <text class="menu-text">设置</text>
        <text class="menu-arrow">›</text>
      </view>
    </view>
  </view>

  <!-- 数据管理 -->
  <view class="section">
    <view class="section-title">数据管理</view>

    <view class="menu-list">
      <view class="menu-item" bindtap="onClearCache">
        <text class="menu-icon">🗑️</text>
        <text class="menu-text">清除缓存</text>
      </view>

      <view class="menu-item danger" bindtap="onLogout">
        <text class="menu-icon">🚪</text>
        <text class="menu-text">退出登录</text>
      </view>
    </view>
  </view>

  <!-- 关于 -->
  <view class="section">
    <view class="section-title">关于</view>

    <view class="about-info">
      <view class="about-item">
        <text class="about-label">版本</text>
        <text class="about-value">v1.0.0</text>
      </view>
      <view class="about-item">
        <text class="about-label">更新时间</text>
        <text class="about-value">2026-01-11</text>
      </view>
    </view>
  </view>
</view>
