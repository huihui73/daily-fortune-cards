.task-container {
  padding: 8px 0;
}

.task-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 14px;
}

.task-title {
  font-size: 15px;
  font-weight: 600;
  color: #333;
}

.task-progress {
  display: flex;
  align-items: center;
  gap: 10px;
}

.progress-text {
  font-size: 13px;
  color: #666;
  font-weight: 500;
}

.progress-bar {
  width: 80px;
  height: 6px !important;
  border-radius: 10px;
}

.task-list {
  display: flex;
  flex-direction: column;
  gap: 10px;
}

.task-item {
  display: flex;
  align-items: center;
  padding: 12px;
  background: linear-gradient(135deg, rgba(255, 255, 255, 0.9) 0%, rgba(248, 249, 250, 0.9) 100%);
  border-radius: 10px;
  border: 1px solid rgba(0, 0, 0, 0.06);
  transition: all 0.3s ease;
}

.task-item.completed {
  background: linear-gradient(135deg, rgba(82, 196, 26, 0.08) 0%, rgba(82, 196, 26, 0.05) 100%);
  border-color: rgba(82, 196, 26, 0.2);
}

.task-item:active {
  transform: scale(0.98);
}

.task-checkbox {
  width: 24px;
  height: 24px;
  border-radius: 50%;
  background: linear-gradient(135deg, #e0e0e0 0%, #f5f5f5 100%);
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 12px;
  flex-shrink: 0;
  transition: all 0.3s ease;
}

.task-item.completed .task-checkbox {
  background: linear-gradient(135deg, #52c41a 0%, #389e0d 100%);
  box-shadow: 0 2px 6px rgba(82, 196, 26, 0.3);
}

.checkbox-icon {
  font-size: 14px;
  color: #ffffff;
  font-weight: 600;
}

.task-text {
  flex: 1;
  font-size: 14px;
  color: #333;
  line-height: 1.5;
  transition: all 0.3s ease;
}

.task-item.completed .task-text {
  color: #999;
  text-decoration: line-through;
}

.task-congrats {
  margin-top: 14px;
  padding: 14px;
  background: linear-gradient(135deg, #52c41a 0%, #389e0d 100%);
  border-radius: 10px;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 10px;
  animation: celebrate 0.6s ease;
}

@keyframes celebrate {
  0% {
    transform: scale(0.8);
    opacity: 0;
  }
  50% {
    transform: scale(1.1);
  }
  100% {
    transform: scale(1);
    opacity: 1;
  }
}

.congrats-icon {
  font-size: 24px;
}

.congrats-text {
  font-size: 14px;
  color: #ffffff;
  font-weight: 600;
}