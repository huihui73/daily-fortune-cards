.card {
  border-radius: 16px;
  background: #ffffff;
  padding: 16px;
  margin-bottom: 12px;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.06);
  transition: all 0.3s ease;
}

.card:active {
  transform: scale(0.98);
}

.card-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 15px;
}

.card-title {
  display: flex;
  align-items: center;
  flex: 1;
}

.card-icon {
  font-size: 18px;
  margin-right: 8px;
}

.title-text {
  font-weight: 600;
  color: #333;
}

.card-toggle {
  padding: 4px 8px;
  background: #f5f5f5;
  border-radius: 12px;
}

.toggle-icon {
  font-size: 16px;
  color: #666;
  font-weight: 300;
}

.card-content-wrapper {
  margin-top: 12px;
  animation: slideDown 0.3s ease;
}

@keyframes slideDown {
  from {
    opacity: 0;
    transform: translateY(-8px);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.card-content {
  color: #666;
  font-size: 13px;
  line-height: 1.8;
  white-space: pre-wrap;
}

.content-text {
  word-wrap: break-word;
}

.card-actions {
  margin-top: 12px;
  padding-top: 12px;
  border-top: 1px solid #f0f0f0;
  display: flex;
  justify-content: flex-end;
}

.action-btn {
  font-size: 12px;
  padding: 0 12px;
  height: 28px;
  line-height: 26px;
  border-radius: 14px;
  color: #108ee9;
  border-color: #108ee9;
  background: transparent;
}

.action-btn::after {
  border: none;
}
