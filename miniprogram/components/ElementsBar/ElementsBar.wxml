<view class="elements-container">
  <view class="elements-title">五行平衡</view>
  <view class="elements-bars">
    <view class="element-item" wx:for="{{elements}}" wx:key="name">
      <view class="element-label">
        <text class="element-name">{{item.name}}</text>
        <text class="element-value">{{item.value}}</text>
      </view>
      <view class="element-bar-container">
        <view 
          class="element-bar" 
          style="width: {{item.percent}}%; background: {{item.color}};"
        ></view>
      </view>
      <view class="element-advice" wx:if="{{item.advice}}">{{item.advice}}</view>
    </view>
  </view>
</view>