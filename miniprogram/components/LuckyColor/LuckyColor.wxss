.lucky-color-container {
  padding: 8px 0;
}

.color-display {
  display: flex;
  align-items: center;
  gap: 16px;
  margin-bottom: 16px;
}

.color-circle {
  width: 80px;
  height: 80px;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: transform 0.3s ease;
}

.color-circle:active {
  transform: scale(0.95);
}

.color-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 6px;
}

.color-name {
  font-size: 18px;
  font-weight: 600;
  color: #333;
}

.color-hex {
  font-size: 13px;
  color: #999;
  font-family: monospace;
  background: linear-gradient(135deg, rgba(0, 0, 0, 0.03) 0%, rgba(0, 0, 0, 0.01) 100%);
  padding: 4px 8px;
  border-radius: 6px;
  display: inline-block;
  width: fit-content;
}

.color-meaning {
  background: linear-gradient(135deg, rgba(255, 255, 255, 0.9) 0%, rgba(248, 249, 250, 0.9) 100%);
  border-radius: 10px;
  padding: 12px;
  margin-bottom: 14px;
  border: 1px solid rgba(0, 0, 0, 0.04);
}

.meaning-title {
  font-size: 14px;
  font-weight: 600;
  color: #333;
  display: block;
  margin-bottom: 8px;
}

.meaning-text {
  font-size: 13px;
  color: #666;
  line-height: 1.6;
  display: block;
}

.color-tips {
  background: linear-gradient(135deg, rgba(102, 126, 234, 0.08) 0%, rgba(118, 75, 162, 0.08) 100%);
  border-radius: 10px;
  padding: 12px;
  border: 1px solid rgba(102, 126, 234, 0.1);
}

.tips-title {
  font-size: 14px;
  font-weight: 600;
  color: #667eea;
  display: block;
  margin-bottom: 8px;
}

.tips-list {
  display: flex;
  flex-direction: column;
  gap: 6px;
}

.tip-item {
  font-size: 13px;
  color: #555;
  line-height: 1.6;
  display: block;
}