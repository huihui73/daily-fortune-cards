/* 全局样式 */
page {
  background-color: #f5f5f5;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', 'Roboto', 'Oxygen', 'Ubuntu', 'Cantarell', 'Fira Sans', 'Droid Sans', 'Helvetica Neue', sans-serif;
  font-size: 14px;
  line-height: 1.6;
  color: #333;
}

/* 容器 */
.container {
  padding: 16px;
  min-height: 100vh;
  box-sizing: border-box;
}

/* 按钮 */
button {
  border-radius: 8px;
  font-size: 14px;
}

button::after {
  border: none;
}

.primary {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #ffffff;
  border: none;
  border-radius: 24px;
  height: 44px;
  padding: 0 32px;
  font-size: 15px;
  font-weight: 500;
  box-shadow: 0 4px 12px rgba(102, 126, 234, 0.3);
}

.primary::after {
  border: none;
}

.primary[disabled] {
  background: #cccccc;
  box-shadow: none;
}

.secondary {
  background: #ffffff;
  color: #108ee9;
  border: 1px solid #108ee9;
  border-radius: 24px;
  height: 44px;
  padding: 0 32px;
  font-size: 15px;
}

/* 输入框 */
.input {
  height: 44px;
  border: 1px solid #e0e0e0;
  border-radius: 8px;
  padding: 0 12px;
  background: #ffffff;
  font-size: 14px;
}

.input:focus {
  border-color: #108ee9;
  outline: none;
}

/* 卡片样式 */
.card {
  border-radius: 16px;
  background: #ffffff;
  padding: 16px;
  margin-bottom: 12px;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.06);
  transition: all 0.3s ease;
}

.card:active {
  transform: scale(0.98);
}

.card-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-weight: 600;
  font-size: 15px;
  color: #333;
}

.card-content {
  margin-top: 12px;
  color: #666;
  font-size: 13px;
  line-height: 1.6;
}

.card-footer {
  margin-top: 12px;
  padding-top: 12px;
  border-top: 1px solid #f0f0f0;
  font-size: 12px;
  color: #999;
}

/* 区域标题 */
.section-title {
  font-weight: 600;
  margin: 16px 0 8px 0;
  color: #333;
  font-size: 16px;
}

.section {
  background: #ffffff;
  border-radius: 12px;
  padding: 16px;
  margin-bottom: 12px;
}

.section-item {
  margin-right: 16px;
}

/* 标签 */
.tag {
  display: inline-block;
  padding: 4px 12px;
  border-radius: 12px;
  font-size: 12px;
  margin: 2px;
}

/* 徽章 */
.badge {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  min-width: 20px;
  height: 20px;
  padding: 0 6px;
  background: #ff4d4f;
  color: #ffffff;
  font-size: 12px;
  border-radius: 10px;
}

/* 分割线 */
.divider {
  height: 1px;
  background: #f0f0f0;
  margin: 12px 0;
}

/* 图标 */
.icon {
  width: 20px;
  height: 20px;
  display: inline-block;
  vertical-align: middle;
}

/* 文本颜色 */
.text-primary {
  color: #108ee9;
}

.text-success {
  color: #52c41a;
}

.text-warning {
  color: #faad14;
}

.text-danger {
  color: #ff4d4f;
}

.text-muted {
  color: #999;
}

/* 间距 */
.mt-4 { margin-top: 4px; }
.mt-8 { margin-top: 8px; }
.mt-12 { margin-top: 12px; }
.mt-16 { margin-top: 16px; }
.mt-24 { margin-top: 24px; }

.mb-4 { margin-bottom: 4px; }
.mb-8 { margin-bottom: 8px; }
.mb-12 { margin-bottom: 12px; }
.mb-16 { margin-bottom: 16px; }
.mb-24 { margin-bottom: 24px; }

.p-12 { padding: 12px; }
.p-16 { padding: 16px; }
.p-24 { padding: 24px; }

/* Flex 布局 */
.flex {
  display: flex;
}

.flex-center {
  display: flex;
  align-items: center;
  justify-content: center;
}

.flex-between {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.flex-wrap {
  flex-wrap: wrap;
}

/* 弹窗 */
.modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 999;
}

.modal-content {
  background: #ffffff;
  border-radius: 16px;
  padding: 24px;
  width: 80%;
  max-width: 320px;
}

/* 加载 */
.loading {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 40px 0;
  color: #999;
}

/* 空状态 */
.empty {
  text-align: center;
  padding: 40px 0;
  color: #999;
}

.empty-icon {
  font-size: 48px;
  margin-bottom: 12px;
  color: #d0d0d0;
}

/* 隐藏元素 */
.hidden {
  display: none !important;
}

/* 过渡动画 */
.fade-in {
  animation: fadeIn 0.3s ease-in-out;
}

@keyframes fadeIn {
  from {
    opacity: 0;
    transform: translateY(10px);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}
